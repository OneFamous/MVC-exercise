@model exercise.Models.Movies

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies Detail</h2>

@if (Model != null)
{
    <dl>
        <dt>Id:</dt>
        <dd>@Model.Id</dd>
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Genre:</dt>
        <dd>@Model.genres.Name</dd>
    </dl>
}
else
{
    <p>Movies not found!</p>
}
