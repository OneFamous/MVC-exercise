@model exercise.ViewModels.CustomersViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.header.Name</h2>

@if (!Model.customers.Any())
{
    <text>Kimse Yok!</text>
}
else
{
    <table>
        <tr>
            <th>Customers</th>
            <th>Membership Type</th>
        </tr>
        @foreach (var customer in Model.customers)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Customer", new { id = customer.Id })">@customer.Name</a></td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>

        }
    </table>
}
